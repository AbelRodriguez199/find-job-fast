<%- layout('layouts/main') %>
  <h1 class="mt-4"></h1>

<div class="row">
  <div class="col-md-4 offset-md-4">
    <div class="card mt-4 text-center">
      <div class="card-header">
        <h3>Editar Oferta</h3>
      </div>
      <div class="card-body">
        <form action="/edit-offer" method="POST">
          <div class="form-group">
          <input type="text" name="post" placeholder="puesto" class="form-control">
        </div>
        <div class="form-group">
          <input type="text" name="description" placeholder="descripcion" class="form-control">
        </div>
        <div class="form-group">
            <input type="text" name="requirements" placeholder="requisitos" class="form-control">
          </div>
          <div class="form-group">
              <input type="text" name="salary" placeholder="salario"  class="form-control">
            </div>
          <button type="submit" class="btn btn-primary btn-block mt-4">
            Editar
          </button>
        </form>
      </div>
    </div>
  </div>
</div